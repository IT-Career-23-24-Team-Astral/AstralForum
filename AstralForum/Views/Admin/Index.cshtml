@model AstralForum.Models.Admin.AllUsersViewModel

@{
	Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
        <br><br>
        <h1 class="text-center">All Users</h1>
        <form asp-controller="Admin" asp-action="ListRoles" method="get">
            <button type="submit" class="btn btn-outline-secondary">All Roles</button>
        </form>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col" style="width: 1%;" class="align-middle">#</th>
                    <th scope="col" style="width: 27%;" class="text-center align-middle">First</th>
                    <th scope="col" style="width: 27%;" class="text-center align-middle">Last</th>
                    <th scope="col" style="width: 45%;" class="text-center">Gmail</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @{int rowNumber = 1;}
                @foreach (var item in Model.Users)
			{
                <tr>
                    <th scope="row" class="align-middle">
                        @rowNumber
                        @{rowNumber++;}
                    </th>
                    <td class="text-center align-middle">
                        @item.FirstName
                    </td>
                    <td class="text-center align-middle">
                        @item.LastName
                    </td>
                    <td class="d-flex justify-content-between align-items-center">
                        <span style="margin-right: 10px;">
                            @item.Email
                        </span>

                        <form asp-controller="User" asp-action="Index" method="get">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-outline-secondary">Details</button>
                        </form>
                        
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    </div>
